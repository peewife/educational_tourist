/* pages/org-apply/org-apply.wxss */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background: #fff;
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
}

.header-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx 20rpx;
  height: 88rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

.back-button {
  position: relative;
  z-index: 1;
  padding: 16rpx;
  margin-left: -16rpx;
}

.nav-placeholder {
  width: 100%;
}

.content {
  padding: 64rpx 48rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1a1a1a;
  display: block;
  margin-bottom: 64rpx;
}

/* 表单区域 */
.form-section {
  margin-bottom: 80rpx;
}

.form-row {
  margin-bottom: 64rpx;
}

.form-row--readonly {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.form-label {
  font-size: 28rpx;
  color: #9CA3AF;
}

.form-value-wrap {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.form-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.change-btn {
  font-size: 24rpx;
  color: #C8102E;
  font-weight: 700;
  text-decoration: underline;
}

.form-input {
  width: 100%;
  border-bottom: 2rpx solid #E5E7EB;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #1a1a1a;
  transition: border-color 0.3s;
}

.form-input:focus {
  border-color: #1a1a1a;
}

.form-row--address {
  display: flex;
  align-items: flex-end;
}

.form-row--address .form-input {
  flex: 1;
}

.address-btn {
  padding: 16rpx;
  margin-left: 16rpx;
}

.form-row--textarea {
  margin-top: 32rpx;
}

.textarea-label {
  font-size: 24rpx;
  color: #9CA3AF;
  display: block;
  margin-bottom: 16rpx;
}

.form-textarea {
  width: 100%;
  height: 192rpx;
  border: 2rpx solid #E5E7EB;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 300;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #1a1a1a;
}

/* 图片上传 */
.upload-section {
  margin-bottom: 96rpx;
}

.upload-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 32rpx;
}

.upload-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.upload-tip {
  font-size: 20rpx;
  color: #9CA3AF;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.upload-item {
  width: 192rpx;
  height: 192rpx;
  position: relative;
}

.upload-item--image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background: #1a1a1a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-item--add {
  border: 2rpx dashed #D1D5DB;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.3s;
}

.upload-item--add:active {
  border-color: #C8102E;
}

.upload-text {
  font-size: 20rpx;
  color: #D1D5DB;
}

/* 提交按钮 */
.submit-btn {
  background: #1a1a1a;
  padding: 32rpx 0;
  text-align: center;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  transition: background 0.3s;
}

.submit-btn:active {
  background: #C8102E;
}

.submit-btn text {
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  letter-spacing: 8rpx;
}

/* 衬线字体 */
.font-serif {
  font-family: 'Times New Roman', 'Songti SC', serif;
}
