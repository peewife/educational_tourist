/* pages/courses/courses.wxss */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
}

.header-content {
  padding: 0 32rpx 20rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

/* 分类筛选栏 */
.filter-bar {
  position: sticky;
  top: 0;
  z-index: 90;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid #f0f0f0;
  /* padding-top will be set dynamically or via style attribute in wxml */
}

.filter-scroll {
  display: flex;
  white-space: nowrap;
  padding: 24rpx 32rpx;
}

.filter-scroll::-webkit-scrollbar {
  display: none;
}

.filter-item {
  position: relative;
  flex-shrink: 0;
  margin-right: 48rpx;
  padding-bottom: 16rpx;
}

.filter-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.filter-item.active .filter-text {
  color: var(--td-brand-color);
  font-weight: bold;
}

.filter-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: var(--td-brand-color);
  border-radius: 2rpx;
}

/* 课程列表 */
.course-list {
  padding: 32rpx;
}

.course-item {
  margin-bottom: 48rpx;
}

/* 课程封面 */
.course-cover {
  position: relative;
  width: 100%;
  height: 380rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.grade-tag {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4px);
  font-size: 20rpx;
  font-weight: bold;
  color: #1a1a1a;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* 课程信息 */
.course-info {
  padding: 0 8rpx;
}

.course-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  font-family: 'Times New Roman', serif;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-meta {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-top: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

/* 分隔线 */
.course-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin-top: 48rpx;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 32rpx 0;
  color: #ccc;
  font-size: 24rpx;
}

/* 底部安全区域 */
.safe-bottom {
  height: 180rpx;
}
