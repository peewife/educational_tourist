/* pages/bases/bases.wxss */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
}

.header-content {
  padding: 0 32rpx 20rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

/* Tab切换栏 (作为筛选栏) */
.tab-bar {
  display: flex;
  white-space: nowrap;
  padding: 24rpx 32rpx; /* Adjusted padding to match filter-scroll */
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0; /* Will be set dynamically by wxml */
  z-index: 90;
}

.tab-bar::-webkit-scrollbar {
  display: none;
}

.tab-item {
  position: relative;
  flex-shrink: 0;
  margin-right: 48rpx;
  padding-bottom: 16rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: var(--td-brand-color);
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: var(--td-brand-color);
  border-radius: 2rpx;
}

/* 内容区域 */
.content-section {
  padding: 16rpx 32rpx;
}

/* 基地列表项 */
.base-item {
  margin-bottom: 32rpx;
}

.base-cover {
  position: relative;
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.recommend-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 8rpx 16rpx;
  background: var(--td-brand-color);
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.base-info {
  padding: 0 8rpx;
}

.base-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  font-family: 'Times New Roman', serif;
  display: block;
  margin-bottom: 12rpx;
}

.base-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #999;
}

.item-divider {
  height: 1rpx;
  background: #f0f0f0;
  margin-top: 32rpx;
}

/* 机构列表项 */
.agency-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.agency-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f5f5f5;
  border: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
}

.agency-info {
  flex: 1;
  overflow: hidden;
}

.agency-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.agency-district {
  font-size: 24rpx;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.agency-arrow {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 48rpx 0;
}

.safe-bottom {
  height: 180rpx;
}
