/* pages/base-detail/base-detail.wxss */
/* 延续课程/线路详情页布局风格 */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
  /* padding-top will be handled by the header's fixed position and a safe-top view */
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
}

.header-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx 20rpx;
  height: 88rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

.back-button {
  position: relative;
  z-index: 1; /* Ensure back button is above title if they overlap */
  padding: 16rpx; /* Make it easier to tap */
  margin-left: -16rpx; /* Pull back padding for alignment */
}

/* 封面图轮播 */
.cover-section {
  width: 100%;
  height: 420rpx;
  position: relative;
}

.cover-swiper {
  width: 100%;
  height: 100%;
}

.cover-image {
  width: 100%;
  height: 120%;
}

/* 轮播指示器 */
.swiper-indicator {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.indicator-text {
  font-size: 24rpx;
  color: #fff;
}

/* 基本信息 */
.info-section {
  padding: 40rpx 32rpx;
  margin-top: 100rpx; /* Push down to accommodate large image */
  background: #fff;
}

.base-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 2;
  font-family: 'Times New Roman', serif;
  margin-bottom: 32rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
}

.info-label {
  width: 160rpx;
  color: #999;
  flex-shrink: 0;
  padding-top: 8rpx;
}

.info-value {
  color: #1a1a1a;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

.info-value.link {
  color: var(--secondary-color);
}

/* 机构信息卡片 (复用样式用于显示地址/导航) */
.location-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #fff;
  margin-bottom: 16rpx;
}

.location-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: rgba(200, 16, 46, 0.1);
  border: 1rpx solid rgba(200, 16, 46, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.location-detail {
  flex: 1;
  overflow: hidden;
}

.location-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 4rpx;
}

.location-address {
  font-size: 22rpx;
  color: #999;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 分隔条 */
.divider {
  height: 16rpx;
  background: #f5f5f5;
}

/* Tab切换栏 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 90;
}

.tab-item {
  position: relative;
  padding: 32rpx 0;
  text-align: center;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: var(--td-brand-color);
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: var(--td-brand-color);
  border-radius: 2rpx;
}

/* Tab内容区域 */
.tab-content {
  padding: 40rpx 32rpx;
  min-height: 400rpx;
}

/* 详情内容 */
.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

/* 课程列表 (复用样式) */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.course-item {
  display: flex;
  gap: 20rpx;
}

.course-cover {
  width: 224rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f5f5f5;
}

.course-image {
  width: 100%;
  height: 100%;
}

.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}

.course-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.course-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
}

/* 底部安全区域 */
.safe-bottom {
  height: 60rpx;
}
