/* pages/agency-detail/agency-detail.wxss */
/* 延续基地详情页布局风格 */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
  /* padding-top will be handled by the header's fixed position and a safe-top view */
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
}

.header-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx 20rpx;
  height: 88rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

.back-button {
  position: relative;
  z-index: 1; /* Ensure back button is above title if they overlap */
  padding: 16rpx; /* Make it easier to tap */
  margin-left: -16rpx; /* Pull back padding for alignment */
}

/* 封面区域 (Logo展示) */
.cover-section {
  width: 100%;
  height: 420rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-box {
  width: 200rpx;
  height: 200rpx;
  border: 8rpx solid var(--td-brand-color);
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 16rpx;
}

.logo-char {
  font-size: 100rpx;
  font-weight: bold;
  color: var(--td-brand-color);
  font-family: 'Times New Roman', serif;
}

/* 基本信息 */
.info-section {
  padding: 40rpx 32rpx;
  margin-top: 80rpx; /* Adjusted to match course-detail */
  background: #fff;
}

.agency-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  font-family: 'Times New Roman', serif;
  margin-bottom: 32rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.info-label {
  width: 160rpx;
  color: #999;
}

.info-value {
  color: #1a1a1a;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

/* 地址与导航卡片 */
.location-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin: 0 32rpx 32rpx; /* Aligned with info-section since it is outside */
  border: 1rpx solid #f0f0f0;
}

.location-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: rgba(200, 16, 46, 0.1);
  border: 1rpx solid rgba(200, 16, 46, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.location-detail {
  flex: 1;
  overflow: hidden;
}

.location-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 4rpx;
}

.location-address {
  font-size: 24rpx; /* Adjusted to match course-detail */
  color: #666; /* Adjusted to match course-detail */
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-left: 16rpx;
}

/* 分隔条 */
.divider {
  height: 16rpx;
  background: #f5f5f5;
}

/* Tab切换栏 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0;
  z-index: 90;
}

.tab-item {
  position: relative;
  padding: 32rpx 0;
  text-align: center;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: var(--td-brand-color);
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: var(--td-brand-color);
  border-radius: 2rpx;
}

/* Tab内容区域 */
.tab-content {
  padding: 40rpx 32rpx;
  min-height: 400rpx;
}

/* 详情内容 */
.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

/* 线路列表 (复用样式) */
.route-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.route-item {
  display: flex;
  gap: 20rpx;
}

.route-cover {
  width: 224rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
  flex-shrink: 0;
  background: #f5f5f5;
}

.route-image {
  width: 100%;
  height: 100%;
}

.route-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}

.route-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.route-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 80rpx 0;
}

/* 导师列表 (网格布局) */
.expert-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
  padding: 16rpx 0;
}

.expert-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.expert-avatar {
  width: 100%;
  aspect-ratio: 3/4;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  background: #f5f5f5;
}

.avatar-image {
  width: 100%;
  height: 100%;
  filter: grayscale(100%); /* 黑白效果 */
}

.expert-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #1a1a1a;
}

/* 底部安全区域 */
.safe-bottom {
  height: 200rpx;
}
