/* pages/experts/experts.wxss */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
}

.header-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx 20rpx;
  height: 88rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

.back-button {
  position: relative;
  z-index: 1;
  padding: 16rpx;
  margin-left: -16rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: calc(88rpx + env(safe-area-inset-top)); /* Adjust based on header height */
  z-index: 90;
  background: #fff;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 0 24rpx;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1a1a1a;
}

.search-placeholder {
  color: #9CA3AF;
  font-size: 28rpx;
}

.search-clear {
  padding: 8rpx;
}

/* 分类筛选 (Tab样式) */
.category-bar {
  display: flex;
  justify-content: space-around;
  padding: 0 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
}

.category-item {
  position: relative;
  padding: 32rpx 0;
  text-align: center;
}

.category-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.category-item.active .category-text {
  color: var(--td-brand-color);
  font-weight: bold;
}

.category-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: var(--td-brand-color);
  border-radius: 2rpx;
}

/* 导师列表 */
.expert-list {
  padding: 0 32rpx;
}

.expert-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.expert-item:last-child {
  border-bottom: none;
}

/* 加载状态 */
.loading-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading-icon {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 16rpx;
}
