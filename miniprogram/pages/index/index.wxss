/* pages/index/index.wxss */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
}

.header-content {
  padding: 0 32rpx 20rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  padding: 0 24rpx;
}

.search-placeholder {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #999;
}

/* 主内容区域 */
.main-content {
  padding: 0 32rpx;
}

/* Banner 轮播图 */
.banner-section {
  position: relative;
  margin-bottom: 48rpx;
}

.banner-swiper {
  width: 100%;
  height: 800rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  filter: contrast(1.1) grayscale(0.2);
}

.banner-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 48rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
  display: flex;
  flex-direction: column;
}

.banner-subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  text-transform: uppercase;
  letter-spacing: 4rpx;
  margin-bottom: 16rpx;
}

.banner-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #fff;
  font-family: 'Times New Roman', serif;
  line-height: 1.3;
  margin-bottom: 32rpx;
}

.banner-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: fit-content;
  padding: 24rpx 48rpx;
  background: var(--primary-color);
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 100rpx;
}

/* 自定义指示器 */
.banner-indicators {
  position: absolute;
  bottom: 24rpx;
  right: 48rpx;
  display: flex;
  gap: 12rpx;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.4);
  transition: all 0.3s;
}

.indicator-dot.active {
  width: 32rpx;
  border-radius: 6rpx;
  background: #fff;
}

/* 通用区块样式 */
.section {
  margin-bottom: 48rpx;
}

.section-border-top {
  padding-top: 48rpx;
  border-top: 1rpx solid #f0f0f0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.section-header-underline {
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #1a1a1a;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
}

.section-more {
  font-size: 24rpx;
  font-weight: bold;
  color: var(--primary-color);
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 线路列表 */
.route-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 基地横向滚动 */
.base-scroll {
  display: flex;
  white-space: nowrap;
  margin: 0 -32rpx;
  padding: 0 32rpx;
}

.base-scroll::-webkit-scrollbar {
  display: none;
}

/* 底部安全区域 */
.safe-bottom {
  height: 180rpx;
}
