<!--pages/expert-detail/expert-detail.wxml-->
<view class="page-container">
  <!-- 顶部固定区域：标题 -->
  <view class="header" style="padding-top: {{statusBarHeight}}px;">
    <view class="header-content">
      <view class="back-button" bindtap="onBackTap">
        <t-icon name="chevron-left" size="52rpx" color="#1a1a1a" />
      </view>
      <!-- 标题栏 -->
      <view class="title-bar">
        <text class="app-title">导师详情</text>
      </view>
    </view>
  </view>

  <!-- 占位高度 -->
  <view style="height: calc({{statusBarHeight}}px + 108rpx);"></view>

  <view class="content" wx:if="{{expert}}">
    <!-- 顶部照片区域 -->
    <view class="photo-section">
      <view class="photo-frame">
        <view class="photo-bg">
          <image class="photo" src="{{expert.avatarUrl}}" mode="aspectFill" />
        </view>
        <view class="photo-border"></view>
      </view>
      
      <text class="expert-name font-serif">{{expert.name}}</text>
      <text class="expert-role">{{expert.roleName}}</text>
    </view>

    <!-- 详细信息列表 -->
    <view class="info-section">
      <view class="info-item">
        <text class="info-label font-serif">级别</text>
        <text class="info-value">{{expert.levelName}}</text>
      </view>
      <view class="info-item">
        <text class="info-label font-serif">编号</text>
        <text class="info-value">{{expert.certNo}}</text>
      </view>
      <view class="info-item" wx:if="{{expert.agencyName}}">
        <text class="info-label font-serif">所属机构</text>
        <text class="info-value">{{expert.agencyName}}</text>
      </view>
      <view class="info-item">
        <text class="info-label font-serif">有效期至</text>
        <text class="info-value">{{expert.validUntil}}</text>
      </view>
    </view>

    <!-- 简介 -->
    <view class="desc-section" wx:if="{{expert.description}}">
      <text class="section-title font-serif">个人简介</text>
      <text class="desc-text">{{expert.description}}</text>
    </view>

    <!-- 证书展示区 -->
    <view class="cert-section">
      <text class="section-title font-serif">资质证书</text>
      <view class="cert-image-wrap">
        <image 
          class="cert-image" 
          src="https://images.unsplash.com/photo-1586281380349-632531db7ed4?w=800&q=80" 
          mode="widthFix"
        />
      </view>
    </view>
  </view>
</view>
