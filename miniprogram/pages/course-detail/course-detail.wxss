/* pages/course-detail/course-detail.wxss */
@import '/styles/theme.wxss';
@import '/styles/common.wxss';

.page-container {
  min-height: 100vh;
  background-color: #fff;
  /* padding-top will be handled by the header's fixed position and a safe-top view */
}

/* 顶部固定区域 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  flex-direction: column;
}

.header-content {
  display: flex;
  align-items: center;
  padding: 0 32rpx 20rpx;
  height: 88rpx;
}

/* 标题栏 */
.title-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #1a1a1a;
  font-family: 'Times New Roman', serif;
  letter-spacing: -1rpx;
}

.back-button {
  position: relative;
  z-index: 1; /* Ensure back button is above title if they overlap */
  padding: 16rpx; /* Make it easier to tap */
  margin-left: -16rpx; /* Pull back padding for alignment */
}

/* 封面图轮播 */
.cover-section {
  width: 100%;
  height: 420rpx;
  position: relative;
}

.cover-swiper {
  width: 100%;
  height: 100%;
}

.cover-image {
  width: 100%;
  height: 120%;
}

/* 轮播指示器 */
.swiper-indicator {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.indicator-text {
  font-size: 24rpx;
  color: #fff;
}

/* 基本信息 */
.info-section {
  padding: 40rpx 32rpx;
  margin-top: 80rpx; /* Push down to accommodate large image */
}

.course-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 2;
  font-family: 'Times New Roman', serif;
  margin-bottom: 32rpx;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.info-label {
  width: 160rpx;
  color: #999;
}

.info-value {
  color: #1a1a1a;
  background: #f5f5f5;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

.info-value.link {
  color: var(--td-brand-color);
}

.base-actions {
  display: flex;
  align-items: center;
}

/* 相关基地卡片 (复用样式) */
.location-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  margin-top: 24rpx;
  border: 1rpx solid #f0f0f0;
}

.location-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.location-icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: rgba(200, 16, 46, 0.1);
  border: 1rpx solid rgba(200, 16, 46, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.location-detail {
  flex: 1;
  overflow: hidden;
}

.location-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 4rpx;
}

.location-address {
  font-size: 24rpx;
  color: #666;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.location-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-left: 16rpx;
}

/* 分隔条 */
.divider {
  height: 16rpx;
  background: #f5f5f5;
}

/* Tab切换栏 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  position: sticky;
  top: 0; /* Will be overwritten by style in wxml */
  z-index: 90;
}

.tab-item {
  position: relative;
  padding: 32rpx 0;
  text-align: center;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: var(--td-brand-color);
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background: var(--td-brand-color);
  border-radius: 2rpx;
}

/* Tab内容区域 */
.tab-content {
  padding: 40rpx 32rpx;
  min-height: 400rpx;
}

/* 课程详情 */
.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  text-align: justify;
}

.tags-section {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 课程安排 */
.schedule-content {
  padding-left: 16rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 80rpx 0;
}

/* 费用明细 */
.fees-content {
  padding: 16rpx 0;
}

.price-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.price-label {
  font-size: 28rpx;
  color: #999;
  margin-right: 16rpx;
}

.price-value {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--td-brand-color);
  font-family: 'DIN Alternate', monospace;
}

.price-unit {
  font-size: 26rpx;
  color: #1a1a1a;
  margin-left: 8rpx;
}

.fee-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

/* 底部安全区域 */
.safe-bottom {
  height: 200rpx;
}
