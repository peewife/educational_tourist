/* components/function-grid/function-grid.wxss */
.function-grid {
  padding-top: 16rpx;
}

.grid-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 32rpx;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 64rpx 16rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.grid-item--disabled {
  opacity: 0.5;
}

.item-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 1rpx solid #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.grid-item:not(.grid-item--disabled):active .item-icon {
  background: #1a1a1a;
}

.grid-item:not(.grid-item--disabled):active .icon {
  filter: invert(1);
}

.icon {
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

