/* components/route-card/route-card.wxss */
.route-card {
  width: 100%;
}

/* 横向布局 */
.route-card--horizontal {
  display: flex;
  gap: 32rpx;
}

.route-card--horizontal .card-image--square {
  width: 192rpx;
  height: 192rpx;
  flex-shrink: 0;
  border-radius: 4rpx;
  overflow: hidden;
}

.route-card--horizontal .card-image--square image {
  width: 100%;
  height: 100%;
  filter: grayscale(30%);
}

.route-card--horizontal .card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 8rpx 0;
}

.card-header {
  display: flex;
  flex-direction: column;
}

.card-category {
  font-size: 20rpx;
  font-weight: 700;
  color: #9CA3AF;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 8rpx;
}

.card-category--red {
  color: #C8102E;
  letter-spacing: 4rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 24rpx;
}

.card-tag {
  font-size: 20rpx;
  color: #6B7280;
  background: #F3F4F6;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.card-tag--outline {
  background: transparent;
  border: 1rpx solid #E5E7EB;
  border-radius: 999rpx;
  padding: 4rpx 16rpx;
}

/* 时间轴布局 */
.route-card--timeline {
  display: flex;
  gap: 32rpx;
}

.timeline-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 8rpx;
}

.timeline-number {
  font-size: 20rpx;
  font-weight: 700;
  color: #D1D5DB;
}

.timeline-line {
  width: 1rpx;
  flex: 1;
  min-height: 160rpx;
  background: #F3F4F6;
  margin-top: 8rpx;
}

.timeline-content {
  flex: 1;
  padding-bottom: 48rpx;
  border-bottom: 1rpx solid #FAFAFA;
}

.card-main {
  display: flex;
  justify-content: space-between;
  gap: 32rpx;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.route-card--timeline .card-title {
  font-size: 34rpx;
}

.card-image--thumb {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  background: #F3F4F6;
  overflow: hidden;
}

.card-image--thumb image {
  width: 100%;
  height: 100%;
  filter: grayscale(20%);
}

/* 小卡片布局 */
.route-card--small {
  display: flex;
  gap: 24rpx;
}

.route-card--small .card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 0;
}

.card-title--small {
  font-size: 28rpx;
  font-weight: 700;
  color: #1a1a1a;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.route-card--small .card-image--rect {
  width: 224rpx;
  height: 160rpx;
  flex-shrink: 0;
  border-radius: 16rpx;
  overflow: hidden;
  background: #F3F4F6;
}

.route-card--small .card-image--rect image {
  width: 100%;
  height: 100%;
}

.card-tag--small {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
}

/* 衬线字体 */
.font-serif {
  font-family: 'Times New Roman', 'Songti SC', serif;
}
