<!--components/empty-state/empty-state.wxml-->
<view class="empty-state">
  <view class="empty-icon icon--{{icon}}"></view>
  <text class="empty-desc">{{description}}</text>
  <view 
    wx:if="{{showAction}}" 
    class="empty-action"
    bindtap="handleAction"
  >
    {{actionText}}
  </view>
</view>
