.empty-desc {
  font-size: 28rpx;
  color: #9CA3AF;
  text-align: center;
}

.empty-action {
  margin-top: 32rpx;
  padding: 16rpx 48rpx;
  background: #F3F4F6;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #4B5563;
}

.empty-action:active {
  background: #E5E7EB;
}
