/* components/expert-card/expert-card.wxss */
.expert-card {
  width: 100%;
}

/* 列表布局 */
.expert-card--list {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding: 32rpx 0;
}

.card-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1rpx solid #E5E7EB;
  flex-shrink: 0;
}

.card-avatar image {
  width: 100%;
  height: 100%;
  filter: grayscale(100%);
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.card-role {
  font-size: 24rpx;
  color: #6B7280;
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-top: 8rpx;
}

.card-level {
  flex-shrink: 0;
}

.level-tag {
  font-size: 20rpx;
  color: #4B5563;
  background: #F3F4F6;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
}

/* 网格布局 */
.expert-card--grid {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-avatar--large {
  width: 100%;
  aspect-ratio: 3 / 4;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  background: #E5E7EB;
}

.card-name--center {
  font-size: 26rpx;
  font-weight: 700;
  color: #1a1a1a;
  text-align: center;
}

/* 衬线字体 */
.font-serif {
  font-family: 'Times New Roman', 'Songti SC', serif;
}
